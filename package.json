{
    "name": "@slimio/npm-registry",
    "version": "0.7.0",
    "description": "Node.js API to consume npm Registry",
    "main": "index.js",
    "scripts": {
        "prepublishOnly": "pkg-ok",
        "test": "cross-env psp && nyc --reporter=lcov ava --verbose",
        "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
        "coverage": "codecov",
        "report": "nyc report --reporter=html"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SlimIO/npm-registry.git"
    },
    "keywords": [
        "SlimIO",
        "npm",
        "registry",
        "node api"
    ],
    "files": [
        "index.js",
        "index.d.ts",
        "src/*.js"
    ],
    "author": "SlimIO",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SlimIO/npm-registry/issues"
    },
    "homepage": "https://github.com/SlimIO/npm-registry#readme",
    "dependencies": {
        "@slimio/is": "^1.5.1",
        "httpie": "^2.0.0-next.11"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@escommunity/minami": "^1.0.0",
        "@slimio/eslint-config": "^4.1.0",
        "@slimio/psp": "^0.12.1",
        "ava": "^3.13.0",
        "codecov": "^3.8.1",
        "cross-env": "^7.0.2",
        "dotenv": "^8.2.0",
        "eslint": "^7.13.0",
        "husky": "^5.1.0",
        "jsdoc": "^3.6.6",
        "nyc": "^15.1.0",
        "pkg-ok": "^2.3.1"
    },
    "engines": {
        "node": ">=12"
    },
    "husky": {
        "hooks": {
            "pre-push": "cross-env eslint index.js src/**.js && npm test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "nyc": {
        "check-coverage": true,
        "per-file": false,
        "lines": 50,
        "statements": 50,
        "functions": 50,
        "branches": 50
    }
}
